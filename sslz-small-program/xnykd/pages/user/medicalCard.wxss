.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-top: 20px;
  padding-bottom: 20px;
}

.container .tr {
  height: 80px;
  width: 100%;
  background-color: white;
  border-bottom: 1px solid #f1f1f1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.container .tr image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin: 0 20px;
}

.container .tr icon {
  font-size: 25px;
  line-height: 28px;
  margin: 0 20px;
}

.b_text {
  font-size: 14px;
  color: gray;
  font-family: 微软雅黑;
}

.container .tr .moto{
  display: flex;
  flex-direction: row;
}

.container .tr .user {
  display: flex;
  flex-direction: column;
}

.tips{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 20px;
 justify-content: center;
}
.tips text{
  font-family: 微软雅黑;
  font-size: 12px;
  color: gray;
  margin-left: 20px;
  
}